<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
    </style>
    
    <style name="NonButtonText" parent="@android:style/TextAppearance">
	    <item name="android:textColor">#F8F8FF</item>
	    
  	</style>
  	
    <style name="LargeText" parent="@android:style/TextAppearance">
	    <item name="android:textColor">#F8F8FF</item>
	    <item name="android:textSize">20sp</item>
	    
  	</style>
  	
    <style name="SmallText" parent="@android:style/TextAppearance">
	    <item name="android:textColor">#F8F8FF</item>
	    <item name="android:textSize">12sp</item>
	    
  	</style>

    <style name="CustomActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        
        <item name="android:titleTextStyle">@style/NoTitleText</item>
        <item name="android:subtitleTextStyle">@style/NoTitleText</item>
	</style>
	
	<style name="NoTitleText">
	        <item name="android:textSize">0sp</item>
	        <item name="android:textColor">#00000000</item>
	</style>
</resources>