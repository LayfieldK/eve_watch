<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/croppedspace"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Alert Categories" 
            style="@style/NonButtonText"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/character"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:onClick="alertTypeChosen"
                style="@style/NonButtonText"
                android:text="Character, Wallet, and Misc" />
            
            

            <Button
                android:id="@+id/corporation"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:onClick="alertTypeChosen"
                style="@style/NonButtonText"
                android:text="Corporation and Alliance" />

            <Button
                android:id="@+id/bills"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:onClick="alertTypeChosen"
                style="@style/NonButtonText"
                android:text="Bills, Insurance, and Clones" />

            <Button
                android:id="@+id/war"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:onClick="alertTypeChosen"
                style="@style/NonButtonText"
                android:text="War" />

            <Button
                android:id="@+id/recruitment"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:onClick="alertTypeChosen"
                style="@style/NonButtonText"
                android:text="Recruitment" />

            <Button
                android:id="@+id/structures"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:onClick="alertTypeChosen"
                style="@style/NonButtonText"
                android:text="Sovereignty and Structures" />

            <Button
                android:id="@+id/fw"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:onClick="alertTypeChosen"
                style="@style/NonButtonText"
                android:text="Faction Warfare" />

            <Button
                android:id="@+id/agents"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:onClick="alertTypeChosen"
                style="@style/NonButtonText"
                android:text="Agents" />

            <Button
                android:id="@+id/bounties"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:onClick="alertTypeChosen"
                style="@style/NonButtonText"
                android:text="Bounties and Kill Rights" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>